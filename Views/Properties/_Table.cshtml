@model List<RealEstateCRM.Models.ViewModels.PropertyListItemViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Заглавие</th>
            <th>Адрес</th>
            <th>Тип</th>
            <th>Статус</th>
            <th style="text-align:right;">Цена</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="muted">Няма намерени имоти</td>
            </tr>
        }
        else
        {
            foreach (var p in Model)
            {
                <tr>
                    <td>@p.Title</td>
                    <td>@p.Address</td>
                    <td>@p.Type</td>
                    <td>@p.Status</td>
                    <td style="text-align:right;">@p.Price @p.Currency</td>
                    <td style="text-align:right; white-space:nowrap;">
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <button class="btn secondary" onclick="openEdit('@p.Id')">Edit</button>
                            <button class="btn" onclick="del('@p.Id')">Delete</button>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>