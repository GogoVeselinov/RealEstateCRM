@model Dictionary<string, object?>
@{
    string GetValue(string key) => Model.ContainsKey(key) && Model[key] != null ? Model[key]!.ToString()! : "___________";
}
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Разписка</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Times New Roman', serif;
            font-size: 12pt;
            line-height: 1.6;
            color: #000;
            background: #fff;
            padding: 40px 60px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 3px double #000;
            padding-bottom: 15px;
        }
        .header h1 {
            font-size: 20pt;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 8px;
        }
        .receipt-number {
            font-size: 10pt;
            color: #666;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table td {
            padding: 8px;
            border: 1px solid #000;
        }
        table td.label {
            font-weight: bold;
            width: 35%;
            background: #f5f5f5;
        }
        .amount-box {
            background: #fff5e6;
            border: 2px solid #ff9800;
            padding: 20px;
            text-align: center;
            margin: 30px 0;
        }
        .amount-value {
            font-size: 24pt;
            font-weight: bold;
            color: #ff6f00;
        }
        .signatures {
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
        }
        .signature-block {
            text-align: center;
            width: 45%;
        }
        .signature-line {
            border-top: 1px solid #000;
            margin-top: 60px;
            padding-top: 5px;
        }
        .footer {
            margin-top: 40px;
            padding-top: 15px;
            border-top: 1px solid #ccc;
            font-size: 9pt;
            color: #666;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Разписка</h1>
        <div class="receipt-number">№ @Guid.NewGuid().ToString().Substring(0, 8).ToUpper()</div>
    </div>

    <div class="amount-box">
        <div style="font-size: 14pt; margin-bottom: 10px;">ПОЛУЧЕНА СУМА</div>
        <div class="amount-value">@GetValue("Amount") лв.</div>
    </div>

    <table>
        <tr>
            <td class="label">Получихме от</td>
            <td>@GetValue("PayerName")</td>
        </tr>
        <tr>
            <td class="label">Сума</td>
            <td>@GetValue("Amount") лв.</td>
        </tr>
        <tr>
            <td class="label">Дата на плащане</td>
            <td>@GetValue("PaymentDate")</td>
        </tr>
        <tr>
            <td class="label">Основание за плащане</td>
            <td>@GetValue("PaymentReason")</td>
        </tr>
    </table>

    <div style="margin: 30px 0; padding: 15px; border: 1px dashed #999; background: #fafafa;">
        <p style="font-size: 11pt; text-align: justify;">
            С получаването на посочената сума във връзка с <strong>@GetValue("PaymentReason")</strong>, 
            приключват финансовите задължения между страните по въпросната сделка до размера на плащането.
        </p>
    </div>

    <div class="signatures">
        <div class="signature-block">
            <div>Получател:</div>
            <div class="signature-line">КРЕС Консулт ЕООД</div>
        </div>
        <div class="signature-block">
            <div>Платец:</div>
            <div class="signature-line">@GetValue("PayerName")</div>
        </div>
    </div>

    <div class="footer">
        Генериран от RealEstate CRM на @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
    </div>
</body>
</html>
