@using RealEstateCRM.Models.Identity
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Af

<!DOCTYPE html>
<html lang="bg">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstate CRM</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --fg: #111;
            --muted: #444;
            --bg: #fff;
            --bg2: #f5f5f5;
            --line: #e5e5e5;
        }

        body {
            margin: 0;
            background: var(--bg);
            color: var(--fg);
            font: 14px system-ui, -apple-system, Segoe UI, Roboto;
        }

        a {
            color: inherit;
            text-decoration: none
        }

        header,
        footer {
            border-bottom: 1px solid var(--line);
            background: #fff;
        }

        .wrap {
            max-width: 1100px;
            margin: 0 auto;
            padding: 12px 16px;
        }

        nav a {
            margin-right: 16px;
            padding: 6px 8px;
            border: 1px solid transparent
        }

        nav a.active,
        nav a:hover {
            border-color: #000
        }

        .btn {
            display: inline-block;
            padding: 8px 12px;
            border: 1px solid #000;
            background: #000;
            color: #fff;
            cursor: pointer
        }

        .btn.secondary {
            background: #fff;
            color: #000;
        }

        .badge {
            border: 1px solid #000;
            padding: 2px 6px;
            font-size: 12px;
            margin-left: 8px;
        }

        main {
            padding: 24px 16px;
        }

        table {
            width: 100%;
            border-collapse: collapse
        }

        th,
        td {
            padding: 10px;
            border-bottom: 1px solid var(--line)
        }

        tr:hover {
            background: var(--bg2)
        }
    </style>
</head>

<body>
    <header>
        <div class="wrap">
            <strong>RealEstate CRM</strong>
            <span style="float:right">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="badge">
                        @(User.IsInRole(AppRoles.Admin) ? "Admin"
                                            : User.IsInRole(AppRoles.Manager) ? "Manager"
                                            : "Guest")
                    </span>
                    <span style="margin-left:8px">@User.Identity!.Name</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn secondary" style="margin-left:8px;">Изход</button>
                    </form>
                }
            </span>

            <nav style="margin-top:10px;">
                <a asp-controller="Home" asp-action="Index" class="...">Home</a>
                <a asp-controller="Properties" asp-action="Index" class="...">Properties</a>
                <a asp-controller="Clients" asp-action="Index" class="...">Clients</a>
                <a asp-controller="Visits" asp-action="Index" class="...">Visits</a>
                @if (User.IsInRole(AppRoles.Admin) || User.IsInRole(AppRoles.Manager))
                {
                    <a asp-controller="Documents" asp-action="Index" class="...">Documents</a>
                }
                @if (User.IsInRole(AppRoles.Admin))
                {
                    <a asp-controller="Finance" asp-action="Index" class="...">Finance</a>
                    <a asp-controller="Admin" asp-action="Index" class="...">Admin</a>
                }
            </nav>
        </div>
    </header>

    <main class="wrap">
        @RenderBody()
    </main>

    <footer>
        <div class="wrap">&copy; @DateTime.Now.Year — RealEstate CRM</div>
    </footer>

    <input type="hidden" id="__aft" value="@Af.GetAndStoreTokens(Context).RequestToken" />

    @await Html.PartialAsync("_Notification")
    @await Html.PartialAsync("_Confirm")

    @RenderSection("Scripts", required: false)
</body>

</html>