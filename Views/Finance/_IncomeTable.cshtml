@{
    var payments = (List<RealEstateCRM.Models.Entities.VisitPayment>)(ViewBag.Payments ?? new List<RealEstateCRM.Models.Entities.VisitPayment>());
}

<table>
    <thead>
        <tr>
            <th>Дата</th>
            <th>Имущество</th>
            <th>Тип Плащане</th>
            <th>Управител</th>
            <th>Сума</th>
        </tr>
    </thead>
    <tbody>
        @if(payments.Count == 0)
        {
            <tr><td colspan="5" style="text-align:center;padding:20px">Няма плащания</td></tr>
        }
        @foreach(var payment in payments.OrderByDescending(p => p.CreatedAtUtc))
        {
            <tr>
                <td>@payment.CreatedAtUtc.ToString("dd.MM.yyyy")</td>
                <td>@payment.Visit?.Property?.Title</td>
                <td>@payment.PaymentType</td>
            <td>@payment.Visit?.OwnerUser?.UserName</td>
                <td>@payment.Amount.ToString("F2")€</td>
            </tr>
        }
    </tbody>
</table>
